{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:backend-presentation",
                "onlyDependOnLibsWithTags": [
                  "scope:backend-usecase",
                  "scope:backend-domain",
                  "scope:shared-domain"
                ]
              },
              {
                "sourceTag": "scope:backend-infrastructure-repository",
                "onlyDependOnLibsWithTags": [
                  "scope:backend-domain",
                  "scope:backend-usecase"
                ]
              },
              {
                "sourceTag": "scope:backend-usecase",
                "onlyDependOnLibsWithTags": [
                  "scope:backend-domain",
                  "scope:shared-domain"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "parserOptions": { "project": "./tsconfig.*?.json" },
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
