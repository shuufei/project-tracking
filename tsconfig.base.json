{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bison/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@bison/shared/domain": ["libs/shared/domain/src/index.ts"],
      "@bison/project/ui": ["libs/project/ui/src/index.ts"],
      "@bison/schedule/ui": ["libs/schedule/ui/src/index.ts"],
      "@bison/project/backend/feature-shell": [
        "libs/project/backend/feature-shell/src/index.ts"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "tmp"]
}
